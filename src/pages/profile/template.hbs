<div class="profile__sidebar">
  {{{link}}}
</div>
{{{avatar}}}
<div class="name">{{user.first_name}}</div>
<div class="user-data">
  <dl class="list">
    <dt class="label">ID пользователя</dt>
    <dd class="value">{{user.id}}</dd>
    <dt class="label">Логин</dt>
    <dd class="value">{{user.login}}</dd>
    <dt class="label">Имя</dt>
    <dd class="value">{{user.first_name}}</dd>
    <dt class="label">Фамилия</dt>
    <dd class="value">{{user.second_name}}</dd>
    <dt class="label">Телефон</dt>
    <dd class="value">{{user.phone}}</dd>
    <dt class="label">Email</dt>
    <dd class="value">{{user.email}}</dd>
  </dl>
</div>
<div class="links">
  {{{changeAvatar}}}
  {{{changeData}}}
  {{{changePass}}}
  {{{logout}}}
</div>
